<div style="background-color: #222831;  text-align: center">

<div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">ADD NEW WORKOUT</h3>
            </div>
            <div class="panel-body">
              <div class="row">
            <div class=" col-lg-3 col-lg-10 ">
              <table class="table table-user-information">
                <tbody>
                  <tr>
                    <form method="post" action="/workout" enctype="multipart/form-data">
                    <td><label>Type Of Workout</label></td>
                    <td><label class ="radio-inline" id="strength-option"><input type="radio" name="workout" value="strength" id=strength /> Strength</label>
                      <div style="display:none" id="toggle-strength">
                        <label for="strName-input"> Name: </label>
                        <input type="text" name="strName">
                        <label for="weight-input"> Weight: </label>
                        <input type="number" name="weight">
                        <label for="reps-input"> Repetitions: </label>
                        <input type="number" name="reps">
                      </div>
                    </td>
                    <td><label class ="radio-inline" id="cardio-option"><input type="radio" name="workout" value="cardio" id=cardio /> Cardio</label>
                      <div style="display:none" id="toggle-cardio">
                        <label for="carName-input"> Name: </label>
                        <input type="text" name="carName">
                        <label for="time-input"> Time: </label>
                        <input type="timer" name="time">
                        <label for="distance-input"> Distance(miles): </label>
                        <input type="number" name="distance">
                        <label for="calories-input"> Calories burned: </label>
                        <input type="number" name="calories">
                      </div>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <label for="room-photo-input"> Upload Photo </label>
                    </td>
                    <td>
                      <input  id="room-photo-input" type="file" name="workoutPhoto">
                    </td>
                  </tr>
                  <tr>
                    <td>
                    </td>
                    <td>
                      <center><button> Save workout </button>
                    </td>
                    </form>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
